<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <declare-styleable name="TecCircleSeekBarStyle">
        <!--外圆宽度和颜色-->
        <attr name="outerWidth" format="dimension"/>
        <attr name="outerColor" format="color"/>
        <!--内圆宽度和颜色-->
        <attr name="innerWidth" format="dimension"/>
        <attr name="innerColor" format="color"/>
        <!--内圆背景色-->
        <attr name="innerBgColor" format="color"/>
        <!--内边距-->
        <attr name="innerPadding" format="dimension"/>
        <!--当前的值-->
        <attr name="rotation" format="integer"/>
        <!--thumb-->
        <attr name="thumb" format="reference"/>
        <!--顺时针还是逆时针-->
        <attr name="clockWise" format="boolean"/>
        <!--纠正角度-->
        <attr name="correctAngle" format="integer"/>
        <!--该控件是多少度的圆-->
        <attr name="sweepAngle" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TecCircleSeekBarTheme">
        <attr name="tecCircleSeekBarStyle" format="reference"/>
    </declare-styleable>

</resources>
